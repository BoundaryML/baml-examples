{
  "scripts": {
    "setup:server": "cd server && uv pip install -r requirements.txt",
    "setup:frontend": "pnpm --filter frontend install",
    "setup": "pnpm run setup:server && pnpm run setup:frontend",
    
    "start:server": "cd server && uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
    "start:frontend": "pnpm --filter frontend dev",
    
    "dev": "concurrently \"pnpm run start:server\" \"pnpm run start:frontend\"",
    
    "build:frontend": "pnpm --filter frontend build",
    "postbuild:frontend": "mkdir -p server/app/static && cp -r frontend/dist/* server/app/static/",
    "build": "pnpm run build:frontend",
    
    "start:prod": "cd server && uvicorn app.main:app --host 0.0.0.0 --port 8000"
  }
}