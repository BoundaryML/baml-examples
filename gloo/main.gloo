@client[llm] GPT35Client {
    @provider openai
    model gpt-3.5-turbo
    temperature 0
    api_key @ENV.OPENAI_API_KEY
}

@client[llm] GPT4Client {
    @provider openai
    model gpt-4
    temperature 0
    api_key @ENV.OPENAI_API_KEY
}


@function AnswerPrompt {
    @input   Question
    @output  string
}
@class Question {
    info     string
    query    string
}
@variant[llm] v1 for AnswerPrompt {
    @client[llm] GPT4Client
    @prompt {
        Given the following information, answer the query in 2 to 5 sentences

        Information: {@input.info}
        
        Query: {@input.query}
        
        Output:
    }
}
